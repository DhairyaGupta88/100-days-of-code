#include <stdio.h>

// Function to compute the sum up to n terms
double sum_series(int n) {
    double sum = 0.0;
    for (int i = 1; i <= n; i++) {
        // The i-th term is: (2*i - 1) / (2*i)
        double numerator = 2.0 * i - 1.0;
        double denominator = 2.0 * i;
        sum += numerator / denominator;
    }
    return sum;
}

int main() {
    int n;
    printf("Enter the number of terms: ");
    if (scanf("%d", &n) != 1) {
        printf("Invalid input.\n");
        return 1;
    }
    if (n <= 0) {
        printf("Number of terms should be positive.\n");
        return 1;
    }

    double result = sum_series(n);
    printf("Sum of series up to %d terms = %.6f\n", n, result);
    return 0;
}
